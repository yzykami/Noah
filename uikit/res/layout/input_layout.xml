<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/textMessageLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/nim_message_view_bottom"
    android:paddingBottom="@dimen/bottom_component_margin_vertical"
    android:paddingTop="@dimen/bottom_component_margin_vertical">

    <EditText
        android:id="@+id/editTextMessage"
        style="@style/edit_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/bj"
        android:layout_toLeftOf="@+id/ll"
        android:background="@drawable/bg_gray_border"
        android:lineSpacingMultiplier="1.2"
        android:minHeight="@dimen/sns_input_textHeight"
        android:paddingLeft="@dimen/pt6"
        android:paddingRight="@dimen/pt6"
        android:textSize="14sp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sns_input_btn2"
        android:layout_alignBottom="@id/editTextMessage"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/sns_input_bottom"
        android:layout_marginRight="@dimen/bj"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="@dimen/sns_input_btn2"
            android:layout_height="@dimen/sns_input_btn2"
            android:layout_marginLeft="@dimen/bj"
            android:background="@drawable/sns_face"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_fav"
            android:layout_width="@dimen/sns_input_btn2"
            android:layout_height="@dimen/sns_input_btn2"
            android:layout_marginLeft="@dimen/bj"
            android:background="@drawable/sns_face"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="@dimen/sns_input_btn2"
            android:layout_height="@dimen/sns_input_btn2"
            android:layout_marginLeft="@dimen/bj"
            android:background="@drawable/sns_face"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/buttonSendMessage"
            android:layout_width="@dimen/sns_input_send"
            android:layout_height="@dimen/sns_input_btn2"
            android:layout_marginLeft="@dimen/bj"
            android:background="@drawable/bg_red_fill_round"
            android:gravity="center"
            android:text="@string/send"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>