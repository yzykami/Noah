    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBarBlack">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="Theme.Swipe.Back" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Full" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme.Full">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- 欢迎界面主题 -->
    <style name="WelcomeEntranceActionBarTheme1" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/navi</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>

    <!--pager tab-->
    <style name="pagertab_style">
        <item name="android:background">@color/transparent</item>
        <item name="apTabBackground">@color/transparent</item>
        <item name="android:textSize">@dimen/text_content</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">@drawable/tab_color_select</item>
        <item name="apTabIndicatorColor">@color/myRed</item>
        <item name="apTabIndicatorHeight">@dimen/pt2</item>
        <item name="apTabIndicatorWidth">@dimen/pt14</item>
        <item name="apTabUnderlineColor">@color/bg_darkLight</item>
        <item name="apTabUnderlineHeight">@dimen/pt0</item>
        <item name="apTabDividerColor">@color/transparent</item>
        <item name="apTabDividerPadding">0dp</item>
        <item name="apTabShouldExpand">true</item>
        <item name="apTabPaddingLeftRight">@dimen/bjs</item>
        <item name="apTabTextSelectColor">@color/textDarkGray</item>
    </style>

    <style name="pagertab_style_media">
        <item name="android:background">@color/transparent</item>
        <item name="apTabBackground">@color/transparent</item>
        <item name="android:textSize">@dimen/text_content</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">@drawable/tab_color_select_media</item>
        <item name="apTabIndicatorColor">@color/white</item>
        <item name="apTabIndicatorHeight">@dimen/pt2</item>
        <item name="apTabIndicatorWidth">@dimen/pt14</item>
        <item name="apTabUnderlineColor">@color/transparent</item>
        <item name="apTabUnderlineHeight">@dimen/pt1</item>
        <item name="apTabDividerColor">@color/transparent</item>
        <item name="apTabDividerPadding">0dp</item>
        <item name="apTabShouldExpand">true</item>
        <item name="apTabPaddingLeftRight">@dimen/bjs</item>
        <item name="apTabTextSelectColor">@color/white</item>
    </style>

