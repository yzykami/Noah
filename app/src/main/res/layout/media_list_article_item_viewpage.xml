<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/media_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bjs"
        android:layout_marginRight="@dimen/bjs">

        <com.tzw.noah.widgets.MyViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:background="@color/white">
        </com.tzw.noah.widgets.MyViewPager>

        <LinearLayout
            android:id="@+id/ll_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:background="@color/myBlue">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:src="@drawable/media_viewpage_select"/>
        </LinearLayout>
        <!---->

        <!--<ImageView-->
            <!--android:layout_width="10dp"-->
            <!--android:layout_height="15dp"-->
            <!--android:paddingTop="5dp"-->
            <!--android:paddingBottom="5dp"-->
            <!--android:src="@drawable/media_viewpage_unselect"/>-->

    </RelativeLayout>
</RelativeLayout>