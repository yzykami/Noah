                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="90dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="昵称"
                android:textColor="@color/myBlue"
                android:textSize="@dimen/text_content" />

            <TextView
