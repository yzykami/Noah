                    <TextView
                        android:id="@+id/tv_circle_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/pt12"
                        android:maxLines="1"
                        android:text="0"
                        android:textColor="@color/textDarkLightGray"
                        android:textSize="@dimen/sp18" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/pt12"
                        android:layout_marginTop="@dimen/pt6"
                        android:maxLines="1"
                        android:text="圈子"
                        android:textColor="@color/textLightGray"
                        android:textSize="@dimen/sp12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="handle_post"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_airtle_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/pt12"
                        android:maxLines="1"
                        android:text="0"
                        android:textColor="@color/textDarkLightGray"
                        android:textSize="@dimen/sp18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/pt12"
                        android:layout_marginTop="@dimen/pt6"
                        android:maxLines="1"
                        android:text="帖子"
                        android:textColor="@color/textLightGray"
                        android:textSize="@dimen/sp12" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pt10"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
