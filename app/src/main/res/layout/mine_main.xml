                        android:src="@drawable/mine_fav2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/pt25"
                        android:layout_marginTop="@dimen/pt10"
                        android:maxLines="1"
                        android:text="收藏"
                        android:textColor="@color/textDarkLightGray"
                        android:textSize="@dimen/text_lable_small" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/bg_light" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:onClick="handle_comment"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/pt25"
                        android:src="@drawable/mine_comment2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/pt25"
                        android:layout_marginTop="@dimen/pt10"
                        android:maxLines="1"
                        android:text="评论"
                        android:textColor="@color/textDarkLightGray"
                        android:textSize="@dimen/text_lable_small" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pt1"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:onClick="handle_feedback"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/pt25"
                        android:src="@drawable/mine_feedback2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/pt25"
                        android:layout_marginTop="@dimen/pt10"
                        android:maxLines="1"
                        android:text="反馈"
                        android:textColor="@color/textDarkLightGray"
                        android:textSize="@dimen/text_lable_small" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/bg_light" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:onClick="handle_setting"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/pt25"
                        android:src="@drawable/mine_setting2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/pt25"
                        android:layout_marginTop="@dimen/pt10"
                        android:maxLines="1"
                        android:text="设置"
                        android:textColor="@color/textDarkLightGray"
                        android:textSize="@dimen/text_lable_small" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/bg_light" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:onClick="handle_about"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/pt25"
                        android:src="@drawable/mine_about2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/pt25"
                        android:layout_marginTop="@dimen/pt10"
                        android:maxLines="1"
                        android:text="关于"
                        android:textColor="@color/textDarkLightGray"
                        android:textSize="@dimen/text_lable_small" />
                </LinearLayout>
            </LinearLayout>
            <!--功能列表-->
            <RelativeLayout
                android:id="@+id/rl_a1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pt10"
                android:background="@color/white"
                android:clickable="true"
                android:onClick="handle_1">

                <ImageView
                    android:id="@+id/iva1"
                    android:layout_width="@dimen/pt15"
                    android:layout_height="@dimen/pt15"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bj"
                    android:src="@drawable/mine_groth2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/pt10"
                    android:layout_toRightOf="@+id/iva1"
                    android:text="我的成长值"
                    android:textColor="@color/textDarkGray"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:id="@+id/tv_growth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/bj"
                    android:paddingBottom="@dimen/pt15"
                    android:paddingTop="@dimen/pt15"
                    android:text="888"
                    android:textColor="@color/myRed"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/pt4"
                    android:layout_toLeftOf="@+id/tv_growth"
                    android:text="当前成长值"
                    android:textColor="@color/textLightGray"
                    android:textSize="@dimen/sp13" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_a2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pt1"
                android:background="@color/white"
                android:clickable="true"
                android:onClick="handle_1">

                <ImageView
                    android:id="@+id/iva2"
                    android:layout_width="@dimen/pt15"
                    android:layout_height="@dimen/pt15"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bj"
                    android:src="@drawable/mine_score2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/pt10"
                    android:layout_toRightOf="@+id/iva2"
                    android:text="我的积分"
                    android:textColor="@color/textDarkGray"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/bj"
                    android:paddingBottom="@dimen/pt15"
                    android:paddingTop="@dimen/pt15"
                    android:text="888"
                    android:textColor="@color/myRed"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/pt4"
                    android:layout_toLeftOf="@+id/tv_score"
                    android:text="当前积分"
                    android:textColor="@color/textLightGray"
                    android:textSize="@dimen/sp13" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pt12"
                android:background="@color/white"
                android:clickable="true"
                android:onClick="handle_1"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/bj"
                    android:src="@drawable/mine_arrow_gray" />

                <ImageView
                    android:id="@+id/iv_rl1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignBottom="@+id/tv_rl1"
                    android:layout_alignTop="@+id/tv_rl1"
                    android:layout_marginLeft="@dimen/bj"
                    android:gravity="center"
                    android:src="@drawable/mine_label1" />

                <TextView
                    android:id="@+id/tv_rl1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_rl1"
                    android:padding="15dip"
                    android:text="业务菜单"
                    android:textColor="@color/mygray"
                    android:textSize="@dimen/sp14" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pt1"
                android:background="@color/white"
                android:clickable="true"
                android:onClick="handle_2"

                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/bj"
                    android:src="@drawable/mine_arrow_gray" />

                <ImageView
                    android:id="@+id/iv_rl2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignBottom="@+id/tv_rl2"
                    android:layout_alignTop="@+id/tv_rl2"
                    android:layout_marginLeft="@dimen/bj"
                    android:gravity="center"
                    android:src="@drawable/mine_label2" />

                <TextView
                    android:id="@+id/tv_rl2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_rl2"
                    android:padding="15dip"
                    android:text="业务菜单"
                    android:textColor="@color/mygray"
                    android:textSize="@dimen/sp14" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pt1"
                android:background="@color/white"
                android:clickable="true"
                android:onClick="handle_3"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/bj"
                    android:src="@drawable/mine_arrow_gray" />

                <ImageView
                    android:id="@+id/iv_rl3"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignBottom="@+id/tv_rl3"
                    android:layout_alignTop="@+id/tv_rl3"
                    android:layout_marginLeft="@dimen/bj"
                    android:gravity="center"
                    android:src="@drawable/mine_label3" />

                <TextView
                    android:id="@+id/tv_rl3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_rl3"
                    android:padding="15dip"
                    android:text="业务菜单"
                    android:textColor="@color/mygray"
                    android:textSize="@dimen/sp14" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pt12"
                android:background="@color/white"
                android:clickable="true"
                android:onClick="handle_setting"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/bj"
                    android:src="@drawable/mine_arrow_gray" />

                <ImageView
