<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light"
    android:orientation="vertical"
    tools:context="com.tzw.noah.MainActivity">


    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mine_bg"
                android:orientation="vertical">

                <View
                    android:id="@+id/statusBar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pt25"
                    android:background="@color/transparent" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rl_comment"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/bj">

                        <ImageView
                            android:id="@+id/iv_comment"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:paddingBottom="3dp"
                            android:paddingLeft="1dp"
                            android:paddingRight="7dp"
                            android:paddingTop="5dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/mine_msg2" />

                        <TextView
                            android:id="@+id/tv_notice_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/pt0"
                            android:background="@drawable/bg_notice_round_white"
                            android:gravity="center"
                            android:minWidth="@dimen/pt12"
                            android:paddingLeft="@dimen/pt3"
                            android:paddingRight="@dimen/pt3"
                            android:text="0"
                            android:textColor="@color/myRed"
                            android:textSize="@dimen/sp9" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="83dp"
                    android:layout_marginLeft="@dimen/bj"
                    android:layout_marginRight="@dimen/bj"
                    android:background="@color/transparent">

                    <RelativeLayout
                        android:id="@+id/ll_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/tv_login"
                        android:layout_toRightOf="@+id/tv_login"
                        android:onClick="handle_userdetail"
                        android:orientation="horizontal">

                        <me.xiaopan.sketchsample.widget.SampleImageViewHead
                            android:id="@+id/iv_head"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:src="@drawable/sns_user_default" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/iv_head"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/pt10"
                                android:layout_marginRight="@dimen/pt15"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="点击登录"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp18" />

                            <TextView
                                android:id="@+id/tv_sign"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/pt10"
                                android:layout_marginRight="@dimen/pt15"
                                android:layout_marginTop="@dimen/pt5"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="1秒登录，专享个性化服务"
                                android:textColor="#80ffffff"
                                android:textSize="@dimen/text_comment" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_next"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/mine_arrow_white"
                            android:visibility="visible" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_gray_border"
                        android:maxLines="1"
                        android:onClick="handle_login"
                        android:padding="@dimen/pt5"
                        android:text="立即登录"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_content"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pt0"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
